<!-- search bar -->
<div class="container search-bar d-flex justify-content-around">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">Search Restaurant：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="Enter name, category"
                           aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
                    <div class="dropdown ml-3">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                    SORT BY{{#if name_en}}name_en{{/if}} {{#if location}}selected{{/if}}:
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/asc">A -> Z</a>
                    <a class="dropdown-item" href="/desc">Z -> A</a>
                    <a class="dropdown-item" href="/location">地區</a>
                    <a class="dropdown-item" href="/category">種類</a>
                </div>
            </div>
</div>



{{#if restaurants}}
    <!-- restaurant list -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="card-columns">
                    {{#each restaurants}}
                            <div class="card mb-3">
                                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-1">{{this.name}}</h6>

                                    <div class="restaurant-category mb-1">
                                        <i class="fas fa-utensils pr-2"></i> {{this.category}}
                                    </div>
                                    <span class="badge badge-pill badge-danger font-weight-normal">
                                        {{this.rating}}
                                        <i class="fas fa-star fa-xs"></i>
                                    </span>
                                </div>

                                <div class="card-footer bg-transparent d-flex align-items-center">
                                    <a href="./restaurants/{{this._id}}/edit">
                                        <button class="btn btn-primary btn-sm">Edit</button>
                                    </a>
                                    <a href="./restaurants/{{this._id}}" class="mx-2">
                                        <button class="btn btn-primary btn-sm">Detail</button>
                                    </a>
                                    <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">delete</button>
                                    </form>
                                </div>
                            </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
{{/if}}

{{#unless restaurants}}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 col-8 mx-auto text-left">
                Your search did not match any restaurant.
                <br>
                Suggestions:
                <ul>
                    <li>Make sure all words are spelled correctly.</li>
                    <li>Try different keywords.</li>
                    <li> Try more general keywords.</li>
                </ul>
            </div>
        </div>
    </div>
{{/unless}}
